<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
    <persistence-unit name="tpassurancePU" transaction-type="RESOURCE_LOCAL">
        <!-- Ajoutez ici toutes vos entités -->
        <class>sn.codeur.tp_assurance_vi.entity.Assurance</class>


        <properties>
            <!-- Configuration de la base de données PostgreSQL -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/tpassurance_db" />
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver" />
            <property name="jakarta.persistence.jdbc.user" value="postgres" />
            <property name="jakarta.persistence.jdbc.password" value="200314" />

            <!-- Hibernate comme fournisseur JPA -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
            <property name="hibernate.hbm2ddl.auto" value="update" />

            <!-- Logs SQL -->
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
        </properties>
    </persistence-unit>
</persistence>
